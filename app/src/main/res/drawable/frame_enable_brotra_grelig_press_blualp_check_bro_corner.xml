<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/blue_light_alpha"/>
            <corners android:radius="@dimen/item_radius"/>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/brown_light" />
            <corners android:radius="@dimen/item_radius"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/brown"/><!--边框颜色-->
            <solid android:color="@color/transparent"/><!--填充色-->
            <corners android:radius="@dimen/item_radius"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/grey_light_alpha"/>
            <corners android:radius="@dimen/item_radius"/>
        </shape>
    </item>
</selector>