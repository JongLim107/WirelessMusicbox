<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval" android:useLevel="false">
            <solid android:color="@color/grey_alpha" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
            <solid android:color="@color/grey_alpha" />
            <stroke android:width="1dp" android:color="@color/white" />
            <size android:width="@dimen/user_head_w" android:height="@dimen/user_head_h" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="oval" android:useLevel="false">
            <solid android:color="@color/brown" />
            <padding android:bottom="1dp" android:left="2dp" android:right="2dp" android:top="1dp" />
            <solid android:color="@color/grey_light" />
            <stroke android:width="1dp" android:color="@color/white_alpha" />
            <size android:width="@dimen/user_head_w" android:height="@dimen/user_head_h" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="oval" android:useLevel="false">
            <solid android:color="@color/grey" />
            <padding android:bottom="1dp" android:left="2dp" android:right="2dp" android:top="1dp" />
            <solid android:color="@color/blue" />
            <stroke android:width="1dp" android:color="@android:color/white" />
            <size android:width="@dimen/user_head_w" android:height="@dimen/user_head_h" />
        </shape>
    </item>
</selector>