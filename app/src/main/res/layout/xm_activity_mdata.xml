<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/black_alpha"
    tools:context=".ximalaya.childactivity.MdataFragmentActivity">

    <LinearLayout
        android:id="@+id/tabContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/btnAllCate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/side_padding"
            android:text="全部"
            android:textSize="@dimen/text_font_normal"
            android:textColor="@color/gre_check_red"
            android:visibility="gone"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include layout="@layout/xm_fragment_albums"/>

    </android.support.v4.view.ViewPager>

</LinearLayout>